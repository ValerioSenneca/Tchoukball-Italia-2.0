        "babel-polyfill": "^6.5.0",
        "babel-preset-es2015": "^6.0.15",
        "babel-preset-stage-0": "^6.0.15",
        "clean-webpack-plugin": "^1.0.0",
        "css-loader": "^1.0.0",
        "node-sass": "^4.9.4",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.2"
    },
    "dependencies": {
        "vue": "^2.5.17",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1"
